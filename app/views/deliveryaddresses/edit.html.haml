.singup_background
  .singup_main
    %h2.singup_title
      商品送付先住所登録
    .singup_from  
      = form_with model:@deliveryaddress, url: user_deliveryaddress_path(current_user), local: true do |f|
      
        .real_name
          .real_name_field
            .name_label
              本名
              %span.name_required
                必須
            = f.text_field :family_name,  autofocus: true, class: 'real_name_field', placeholder: ' 名字 例) 山田'
            
          .given_field
            .name_explanation
              全角で記入してください
            = f.text_field :given_name, class:'given_name_field', placeholder: ' 名前 例) 太郎'

        -# .input-error_name
        -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddresses: @deliveryaddresses, column: "family_name"} 
        -# .input-error_name
        -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddresses: @deliveryaddresses, column: "given_name"} 

        .real_name       
          .real_name_field
            .name_label
              本名(カナ)
              %span.name_required
                必須
            = f.text_field :family_name_kana, class: 'real_name_field', placeholder: ' 名字(カナ)'
              
          .given_field
            .kana_explanation
              全角カタカナで入力してください
            = f.text_field :given_name_kana, class: 'given_name_field', placeholder: ' 名前(カナ)'
            
        -# .input-error_name
        -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddress: @deliveryaddresses, column: "family_name_kana"} 
        -# .input-error_name
        -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddress: @deliveryaddresses, column: "given_name_kana"} 
      
        .field
          = f.label :postal_code, class: 'singup_label'
          %span.required
            必須
          %br/
          = f.text_field :postal_code, class: 'singup_field', placeholder: '半角数字のみで入力してください'
          -# .input-error
          -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddress: @deliveryaddresses, column: "postal_code"} 

        .field
          = f.label :prefecture_id, class: 'singup_label'
          %span.required
            必須
          %br/
          = f.collection_select :prefecture_id, Prefecture.all, :id, :name
          -# .input-error
          -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddress: @deliveryaddresses, column: "prefecture_id"} 
        
        .field
          = f.label :city, class: 'singup_label'
          %span.required
            必須
          %br/
          = f.text_field :city, class: 'singup_field'
          -# .input-error
          -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddress: @deliveryaddresses, column: "city"} 

        .field
          = f.label :address, class: 'singup_label'
          %span.required
            必須
          %br/
          = f.text_field :address, class: 'singup_field'
          -# .input-error
          -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddress: @deliveryaddresses, column: "address"} 

        .field
          = f.label :building, class: 'singup_label'
          %span.optional
            任意
          %br/
          = f.text_field :building, class: 'singup_field', placeholder: ' マンション名、ビル名、部屋番号など'
          -# .input-error
          -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddress: @deliveryaddresses, column: "building"} 

        .field
          = f.label :phone_number, class: 'singup_label'
          %span.optional
            任意
          %br/
          = f.text_field :phone_number, class: 'singup_field', placeholder: ' 半角数字のみで入力して下さい'
          -# .input-error
          -#   = render partial: 'devise/shared/deliveryaddress_error-messages', locals: {deliveryaddress: @deliveryaddresses, column: "phone_number"} 
          
        .actions
          = f.submit "変更する", class: 'next_btn'  